{
  "name": "@glifxyz/glif-mcp-server",
  "version": "0.9.9",
  "description": "Run AI magic workflows from glif.app",
  "mcpName": "app.glif/glif-mcp-server",
  "license": "MIT",
  "author": "glifxyz",
  "repository": "github:glifxyz/glif-mcp-server",
  "type": "module",
  "bin": "./build/index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck",
    "dev": "tsc --watch",
    "test": "GLIF_API_TOKEN=xxx vitest run",
    "inspector": "npx @modelcontextprotocol/inspector -e GLIF_API_TOKEN=xxx node build/index.js",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "logs:claude": "tail -f -n 5 ~/Library/Logs/Claude/**glif*.log",
    "release": "scripts/release.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.5",
    "wretch": "^2.11.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
